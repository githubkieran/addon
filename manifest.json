{
    "manifest_version": 3,
    "name": "rq_exclude",
    "version": "1.0.0",
    "description": "Excludes reddit and quora from search engine results.",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icnon128.png"
        }
    },
    "content_scripts":[
        {
            "matches": ["*://*/*"],
            "js": ["content.js"]
        }
    ],
    "host_permissions": [
        "https://*.google.com/*"
    ]
}